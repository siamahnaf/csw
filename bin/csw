#!/usr/bin/env bash
set -euo pipefail

PREFIX="${PREFIX:-$HOME/.local}"
LIB="$PREFIX/share/csw/ccswitch.sh"

if [[ ! -f "$LIB" ]]; then
  echo "[ERR] csw library not found: $LIB" >&2
  echo "Reinstall: curl -fsSL https://raw.githubusercontent.com/siamahnaf/csw/main/install.sh | bash" >&2
  exit 1
fi

exec bash "$LIB" "$@"
